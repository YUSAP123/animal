generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Specie {
  id      Int      @id @default(autoincrement())
  name    String?  @unique
  clan    String   @unique
  profile Profile?
}

model Profile {
  id           Int       @id @default(autoincrement())
  colour       String?
  dateOfBirth  DateTime?
  maleParent   Int?
  femaleParent Int?
  specie       Specie    @relation(fields: [specieId], references: [id])
  specieId     Int       @unique
}


model Mating{
  id Int @id @default(autoincrement())
  maleMated Int
  femaleMated Int 
  dateMated DateTime @default(now())
  maternity DateTime
  
}
